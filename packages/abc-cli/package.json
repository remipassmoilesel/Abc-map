{
  "name": "@abc-map/abc-cli",
  "version": "1.0.0",
  "private": true,
  "license": "AGPL-3.0-or-later",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build",
    "clean-build": "yarn run clean && yarn run build",
    "coverage": "nyc mocha --trace-warnings 'build/**/*.test.js'",
    "dep-check": "depcruise -c .dependency-cruiser.js src",
    "lint": "prettier --loglevel warn --check . && eslint './src/**/{*.tsx,*.ts}' --max-warnings=0",
    "lint-fix": "prettier --loglevel warn --write . && eslint './src/**/{*.tsx,*.ts}' --max-warnings=0 --fix",
    "test": "mocha --trace-warnings 'build/**/*.test.js'",
    "watch": "tsc --watch | sed -u 's/\\x1Bc//g'"
  },
  "dependencies": {
    "fast-glob": "^3.2.12",
    "lerna": "^4.0.0",
    "loglevel": "^1.8.1",
    "sort-package-json": "^2.1.0",
    "source-map-support": "^0.5.21",
    "verdaccio": "^5.18.0",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.17",
    "@types/wait-on": "^5.3.1",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "chai": "^4.3.7",
    "dependency-cruiser": "^12.1.1",
    "eslint": "^8.30.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  },
  "volta": {
    "node": "18.12.1"
  }
}
